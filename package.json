{
  "name": "everinbox-test",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch ./src/main.ts",
    "build": "NODE_ENV=production bun run scripts/build.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "bun run typeorm migration:generate",
